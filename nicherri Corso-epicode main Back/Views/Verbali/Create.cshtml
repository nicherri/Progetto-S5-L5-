@model PoliziaMunicipaleApp.Models.Verbale

<h2>Crea Nuovo Verbale</h2>

<form asp-action="Create">
    <div class="form-group">
        <label for="NumeroVerbale">Numero Verbale</label>
        <input type="text" class="form-control" id="NumeroVerbale" name="NumeroVerbale" value="@Model.NumeroVerbale" readonly>
    </div>
    <div class="form-group">
        <label for="TrasgressoreId">Trasgressore</label>
        <select class="form-control" id="TrasgressoreId" name="TrasgressoreId" required>
            @foreach (var trasgressore in ViewBag.Trasgressori)
            {
                <option value="@trasgressore.Id">@trasgressore.Nome @trasgressore.Cognome</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="ViolazioneId">Violazione</label>
        <select class="form-control" id="ViolazioneId" name="ViolazioneId" required>
            @foreach (var violazione in ViewBag.Violazioni)
            {
                <option value="@violazione.Id">@violazione.Descrizione</option>
            }
        </select>
    </div>
    <div class="form-group">
        <label for="DataViolazione">Data Violazione</label>
        <input type="date" class="form-control" id="DataViolazione" name="DataViolazione" required>
    </div>
    <div class="form-group">
        <label for="Importo">Importo</label>
        <input type="number" class="form-control" id="Importo" name="Importo" required>
    </div>
    <button type="submit" class="btn btn-primary">Crea</button>
</form>
